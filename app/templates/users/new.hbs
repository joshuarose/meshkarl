<h3>Add new user</h3>
<form class="form-horizontal container-fluid">
  <div class="form-group">
    <label for="name">Name</label>
    {{input id="name" type="text" class="form-control" placeholder="name" value=model.name}}
  </div>
  <div class="form-group">
    <label for="email">Email address</label>
    {{input id="email" type="email" class="form-control" placeholder="email" value=model.email}}
  </div>
  <div class="form-group">
    <button {{action "createUser" model}} type="submit" class="btn btn-default">Submit</button>
  </div>
</form>



{{outlet}}
